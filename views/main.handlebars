  
<div class="row">
    <div class="col-md-4" id = "item-container">
      <figure class="card card-product">
        <div class="img-wrap"><img src="https://s9.postimg.org/tupxkvfj3/image.jpg"></div>
        <figcaption class="info-wrap">
            <h4 class="title">{{this.title}}</h4>
            <p class="desc">{{this.desc}}</p>
            <div class="rating-wrap">
              <div class="label-rating">{{this.reviews}}</div>
              <!-- <div class="label-rating">154 orders </div> -->
            </div> <!-- rating-wrap.// -->
        </figcaption>
        <div class="bottom-wrap">
          <a href="" class="btn btn-sm btn-primary float-right">Add to Cart</a>	
          <div class="price-wrap h5">
            <span class="price-new">{{this.price}}</span> <del class="price-old">$1980</del>
          </div> <!-- price-wrap.// -->
        </div> <!-- bottom-wrap.// -->
      </figure>
    </div> <!-- col // -->
    </div> <!-- row.// --> 
</div> 
